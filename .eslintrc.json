{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "ignores": [
    "**/*.test.js",
    "**/*.spec.js",
    "node_modules/",
    "build/",
    "public/"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    // add your custom rules here
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
